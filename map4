for (int i = 0; i < 21; i++) {
    for (int j = 0; j < 21; j++) {
        if (i == 0 && j == 0 || i == 0 && j == 20 || i == 20 && j == 0 || i == 20 && j == 20) {
            board[i][j] = 2;
        } else if (i == 0 || i == 20 || j == 0 || j == 20) {
            board[i][j] = 1;
        } else if (j == 10) {
            board[i][j] = 1;
        } else {
            board[i][j] = 0;
        }
    }
}
